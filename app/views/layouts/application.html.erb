<!DOCTYPE html>
<html>
  <head>
    <title>Min</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="heading">
        <h1><%= link_to 'Blog', root_path, class: 'title' %></h1>
      </div>
      <div class="navbar">
        <ul class="nav-lists">
          <% if user_signed_in? %>
            <li class="nav-list">User : <%= current_user.nickname %></li>
            <li class="nav-list"><%= link_to 'SignOut', destroy_user_session_path, method: :delete, class: 'nav-list'%></li>
          <% else %>
            <li class="nav-list"><%= link_to 'SignUp', new_user_registration_path, class: 'nav-list'%></li>
            <li class="nav-list"><%= link_to 'SignIn', new_user_session_path, class: 'nav-list' %></li>
          <% end %>
          <li class="nav-list"><%= link_to 'New', new_miniblog_path, class: 'nav-list' %></li>
        </ul>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
