<div class="contents row">
  <div class="container">
  <% @miniblogs.each do |miniblog| %>
      <div class="content_post">
        <p><%= miniblog.text %></p>
        <ul class="btn-lists">
          <li>
            <%= link_to 'SHOW', miniblog_path(miniblog.id), method: :get, class: 'btn-list' %>
          </li>
          <li>
            <%= link_to 'EDIT', edit_miniblog_path(miniblog.id), method: :get, class: 'btn-list' %>
          </li>
          <li>
            <p  class="btn-list pull-down-list" id="clickButton">DESTROY</p>
          </li>
        </ul>  
      </div>
      <div class="confirmation" id="confirmation_display_before_deletion">
        <h3>Are you sure?</h3>
        <ul>
          <li><p class="before-delete-btn" id="cancelButton">NO</p></li>
          <li><%= link_to 'OK', miniblog_path(miniblog.id), method: :delete, class: 'before-delete-btn'%></li>
        </ul>
      </div>
    <% end %>
  </div>
  </div>
  
  